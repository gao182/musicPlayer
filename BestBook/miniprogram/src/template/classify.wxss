/* miniprogram/pages/template/template.wxss */

.classsify-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.classsify-title .title-text {
  font-size: 38rpx;
}

.classsify-title .title-more {
  font-size: 32rpx;
}

.tab-list {
  position: relative;
  z-index: 0;
  width: 132rpx;
  height: 132rpx;
  line-height: 132rpx;
  text-align: center;
  border-radius: 8rpx;
  color: white;
  background-color: #000;
}

.tab-list .img {
  position: absolute;
  top: 0;
  left: 0;
  z-index: -1;
  width: 132rpx;
  height: 132rpx;
  background-size: cover;
  background-position: center;
  border-radius: 8rpx;
  opacity: 0.7;
  filter: alpha(opacity=70);
}

.book-list, .author-list {
  display: flex;
}

.book-list .img, .author-list .img {
  flex-shrink: 0;
  width: 132rpx;
  height: 200rpx;
  border-radius: 8rpx;
  background-size: cover;
  background-position: center;
}

.book-list .img.no .title{
  min-height: 160rpx;
  margin: 10rpx 0 10rpx 20rpx;
  padding: 0 4rpx;
  display: inline-block;
  -webkit-writing-mode: tb-rl;      
  writing-mode: tb-rl;
  font-size: 16rpx;
  background-color: #fff;
}

.book-list .book-info, .author-list .author-info {
  margin-left: 20rpx;
}

.book-info .book-name, .author-info .author-name {
  font-weight: bold;
  color: #140e0e;
}

.book-info .book-intro, .author-info .author-intro {
  margin-bottom: 30rpx;
  font-size: 26rpx;
  color: #7e7d7d;
  display: -webkit-box; /** 对象作为伸缩盒子模型显示 **/
  -webkit-box-orient: vertical; /** 设置或检索伸缩盒对象的子元素的排列方式 **/
  -webkit-line-clamp: 2; /** 显示的行数 **/
  overflow: hidden; /** 隐藏超出的内容 **/
}

.book-info .book-count, .author-info .author-count {
  color: #14b0ff;
  font-size: 26rpx;
  font-weight: bold;
}

.author-list .img {
  height: 142rpx;
  line-height: 142rpx;
  text-align: center;
}
.author-list .img.no{
  border: 1px solid #eee;
}
.author-list .img.no .title{
  font-size: 20rpx;
  color: #b19157;
}

