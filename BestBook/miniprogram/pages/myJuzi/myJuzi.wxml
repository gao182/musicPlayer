        <view class="list-item">
          <navigator url="../others/others?uid=QFADOOdOmJiLHjFG6kNvYE" open-type="navigate">
            <template is="user-photo" data="" />
          </navigator>
          <template is="juziShow" data="" />
          <template is="sociality" data="" />
        </view>
      </navigator>
    </view>
  </view>
</view>