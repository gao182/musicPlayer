<import src="../../src/template/juzi-list.wxml" />
<view class="container">
  <view class="category">
    <text class="category-juzi {{isNew? 'active':''}}" bindtap="showNew">最新</text>
    <text class="category-juji {{isNew? '':'active'}}" bindtap="showHot">最热</text>
  </view>

  <!-- 展示最新列表 -->
  <view class="juzi-panel" wx:if="{{isNew}}">
    <view class="noAttention" wx:if="{{false}}">
      <view class="iconfont icon-text"></view>
      你还没用发布任何信息
    </view>
    <view wx:else>
      <navigator url="../commentJuzi/commentJuzi" open-type="navigate">
        <view class="list-item">
          <navigator url="../others/others?uid=oQFADOOdOmJiLHjFG6kNvYE" open-type="navigate">
            <template is="user-photo" data="" />
          </navigator>
          <template is="juziShow" data="" />
          <template is="sociality" data="" />
        </view>
      </navigator>
      <navigator url="../commentJuzi/commentJuzi" open-type="navigate">
        <view class="list-item">
          <navigator url="../others/others?uid=QFADOOdOmJiLHjFG6kNvYE" open-type="navigate">
            <template is="user-photo" data="" />
          </navigator>
          <template is="juziShow" data="" />
          <template is="sociality" data="" />
        </view>
      </navigator>
    </view>
  </view>

  <!-- 展示最热列表 -->
  <view class="juzi-panel" wx:else>
    <view class="noAttention" wx:if="{{true}}">
      <view class="iconfont icon-text"></view>
      你还没用发布任何信息
    </view>
    <view wx:else>
      <navigator url="../commentJuzi/commentJuzi" open-type="navigate">
        <view class="list-item">
          <navigator url="../others/others?uid=oQFADOOdOmJiLHjFG6kNvYE" open-type="navigate">
            <template is="user-photo" data="" />
          </navigator>
          <template is="juziShow" data="" />
