/* miniprogram/pages/indexs/index.wxss */
@import "../../src/template/juzi-list.wxss";

page {
  background-color: #f4f4f6;
}

.category {
  position: fixed;
  top: 0;
  color: #7e7d7d;
  text-align: left;
  background-color: white;
  z-index: 1;
}

.category .iconfont {
  padding: 0;
  margin: 0 24rpx;
  vertical-align: middle;
  font-size: 44rpx;
}

.category > text.active {
  font-weight: bold;
  color: #140e0e;
}

.search {
  width: 100%;
  min-height: 56rpx;
  padding: 10rpx 0;
  position: fixed;
  z-index: 2;
  display: flex;
  justify-content: space-around;
  align-items: center;
  background-color: white;
}

.search input {
  width: 76%;
  height: 52rpx;
}

.search .iconfont {
  font-size: 42rpx;
}

/*列表項*/
.hotInfo, .newInfo, .attentionInfo {
  margin-top: 76rpx;
  width: 100%;
}

.hotInfo .list-item, .newInfo .list-item, .attentionInfo .list-item {
  margin-bottom: 24rpx;
  padding: 28rpx 28rpx;
  padding-top: 36rpx;
  background-color: white;
}
