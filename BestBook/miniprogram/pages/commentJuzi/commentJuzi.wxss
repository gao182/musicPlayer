/* miniprogram/pages/commentJuzi/commentJuzi.wxss */
@import "../../src/template/juzi-list.wxss";
@import "../../src/template/comment.wxss";

page {
  background-color: #f4f4f6;
}

.juzi-list, .label, .hot-comment, .all-comment {
  width: 100%;
  padding: 28rpx 28rpx;
  margin-bottom: 24rpx;
  background-color: white;
  box-sizing: border-box;
}

.juzi-list {
  padding-top: 36rpx;
}

.label {
  display: flex;
}

.label .label-list {
  margin-left: 20rpx;
}
.hot-comment, .all-comment {
  margin-bottom: 0;
}
.hot-comment .title,.all-comment .title{
  padding: 12rpx 0;
  font-weight: bold;
  font-size: 34rpx;
}

.comment-input{
  position: fixed;
  bottom: 0;
  width: 100%;
  background-color: white;
}
.comment-input input{
  margin: 30rpx;
  padding: 8rpx 12rpx;
  height: 50rpx;
  background-color: #f4f4f6;
  border-radius: 32rpx;
}