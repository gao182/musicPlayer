/* miniprogram/pages/others/others.wxss */
@import "../../src/template/sociality-count.wxss";
@import "../../src/template/juzi-list.wxss";
@import "../../src/template/classify.wxss";

page {
  background: #f4f4f6;
}

.userinfo {
  width: 100%;
  height: 300rpx;
  display: flex;
  flex-flow: column;
  justify-content: center;
  align-items: center;
  background-color: white;
}

.userinfo-avatar {
  width: 130rpx;
  height: 130rpx;
  margin-top: 30rpx;
  border-radius: 50%;
  background-size: cover;
  background-color: white;
}

.userinfo-name {
  margin: 10rpx 0;
  font-weight: bold;
}

.control {
  width: 100%;
  padding-bottom: 28rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: white;
}

.control button {
  margin: 0 28rpx;
  padding: 0 36rpx;
  background-color: #ff8b40;
  color: white;
  border-radius: 36rpx;
}

.control .contact {
  background-color: #83869e;
}

.sociality-count,.juzi-panel {
  width: 100%;
  margin-bottom: 20rpx;
}

.category {
  justify-content: space-around;
  background-color: white;
  box-shadow: 0 0 rgb(255, 255, 255);
  border-bottom: 1px solid #eee;
}

.list-item,.book-list{
  margin-bottom: 20rpx;
  background-color: white;
}

.book-list{
  padding: 28rpx 28rpx;
  padding-top: 36rpx;
}