/* miniprogram/pages/template/template.wxss */

.whoUp {
  width: 100%;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  box-sizing: border-box;
}

.whoUp .userPhoto {
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  background-size: cover;
  background-position: center;
}

.whoUp .userName {
  margin-left: 12rpx;
  flex-grow: 1;
  font-size: 34rpx;
  color: #7e7d7d;
}

.whoUp .attention {
  margin: 0;
  padding: 8rpx 12rpx;
  font-size: 30rpx;
  line-height: 40rpx;
  color: #ff8b40;
  border: 1px solid #ff8b40;
  border-radius: 2px;
}

.juziInfo {
  width: 100%;
  padding-top: 28rpx;
  padding-bottom: 12rpx;
  border-bottom: 1px solid #eee;
  font-size: 34rpx;
}

.juziInfo > view {
  margin-bottom: 16rpx;
}

.juziInfo  .juzi-img {
  height: 340rpx;
  background-size: cover;
  background-position: center;
  border-radius: 20rpx;
}

.from-author, .juzi-time {
  font-size: 28rpx;
  color: #7e7d7d;
}

.juzi-time {
  text-align: right;
}

.socialityInfo {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #7e7d7d;
}

.socialityInfo .iconfont {
  display: inline-block;
  padding: 16rpx 0;
}

.classsify-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.classsify-title .title-text {
  font-size: 38rpx;
}

.classsify-title .title-more {
  font-size: 32rpx;
}

.tab-list {
  position: relative;
  z-index: 0;
  width: 132rpx;
  height: 132rpx;
  line-height: 132rpx;
  text-align: center;
  border-radius: 8rpx;
  color: white;
  background-color: #000;
}

.tab-list .img {
  position: absolute;
  top: 0;
  left: 0;
  z-index: -1;
  width: 132rpx;
  height: 132rpx;
  background-size: cover;
  background-position: center;
  border-radius: 8rpx;
  opacity: 0.8;
  filter: alpha(opacity=80);
}

.book-list {
  display: flex;
}

.book-list .img {
  width: 132rpx;
  height: 200rpx;
  border-radius: 8rpx;
  background-size: cover;
  background-position: center;
}

.book-list .book-info {
  max-width: 300rpx;
  margin-left: 20rpx;
}

.book-info .book-name {
  font-weight: bold;
}

.book-info .book-intro {
  margin: 30rpx 0;
  font-size: 26rpx;
  color: #7e7d7d;
  display: -webkit-box; /** 对象作为伸缩盒子模型显示 **/
  -webkit-box-orient: vertical; /** 设置或检索伸缩盒对象的子元素的排列方式 **/
  -webkit-line-clamp: 2; /** 显示的行数 **/
  overflow: hidden; /** 隐藏超出的内容 **/
}

.book-info .book-count{
  color: #14b0ff;
  font-size: 26rpx;
  font-weight: bold;
}
